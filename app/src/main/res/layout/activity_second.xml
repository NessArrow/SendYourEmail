<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/top_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter email details"
        android:fontFamily="@font/sf_ultra_light"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/et_email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_email_24"
        app:layout_constraintTop_toBottomOf="@id/top_tv1"
        android:hint="Email address"
        android:fontFamily="@font/sf_ultra_light"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"

        android:drawablePadding="10dp"/>
    <EditText
        android:id="@+id/et_email_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_sms_failed_24"
        app:layout_constraintTop_toBottomOf="@id/et_email_address"
        android:hint="Email subject"
        android:fontFamily="@font/sf_ultra_light"
        android:layout_margin="10dp"
        android:drawablePadding="10dp"/>
    <EditText
        android:id="@+id/et_email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_sms_24"
        app:layout_constraintTop_toBottomOf="@id/et_email_subject"
        android:hint="Email text"
        android:fontFamily="@font/sf_ultra_light"
        android:layout_margin="10dp"
        android:drawablePadding="10dp"/>

    <Button
        android:id="@+id/confirm_btn"
        android:text="confirm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cancel_btn"
        android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/cancel_btn"
        android:text="cancel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/confirm_btn"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>